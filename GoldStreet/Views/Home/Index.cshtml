@{
    ViewBag.Title = "Home Page";
}

<!-- HERO CAROUSEL -->
<div id="heroCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
    <div class="carousel-inner">

        <!-- Slide 1 -->
        <div class="carousel-item active" style="height: 80vh; background: url('@Url.Content("~/Imagenes/Carrusel/carne-de-vaca-carne-premium-madu.png")') center/cover no-repeat;">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center h-100 text-center">
                <h1 class="display-4 fw-bold text-white text-shadow animate-slide">Deleita tu paladar<br>con nuestros mejores cortes</h1>
            </div>
        </div>

        <!-- Slide 2 -->
        <div class="carousel-item" style="height: 80vh; background: url('@Url.Content("~/Imagenes/Carrusel/Mar-y-tierra-001-Larousse-Cocina.png")') center/cover no-repeat;">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center h-100 text-center">
                <h1 class="display-4 fw-bold text-white text-shadow animate-slide">Un Restaurante Real<br>El Steak Perfecto, en el Lugar Perfecto</h1>
            </div>
        </div>

        <!-- Slide 3 -->
        <div class="carousel-item" style="height: 80vh; background: url('@Url.Content("~/Imagenes/Carrusel/Mesera-1024x889.png")') center/cover no-repeat;">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center h-100 text-center">
                <h1 class="display-4 fw-bold text-white text-shadow animate-slide">Ven, te esperamos</h1>
                <p class="lead animate-slide mt-3">Disfruta de la mejor experiencia gastronómica en GoldStreet</p>
                <a href="@Url.Action("Reservacion", "Home")" class="btn btn-warning btn-lg mt-3 animate-slide">Realiza tu reservación</a>
            </div>
        </div>

    </div>

    <!-- Controles -->
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Siguiente</span>
    </button>

    <!-- Indicadores -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
</div>

<!-- ESTILOS ADICIONALES -->