<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GoldStreet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/CSS/Generales.css" rel="stylesheet" />

</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">
                <img src="~/Imagenes/Logo.png" alt="GoldStreet">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav align-items-center">
                    <li class="nav-item">@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Carta", "Home")">
                            <i class="bi bi-card-list footer-icon"></i> Nuestra carta
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Somos", "Home")">
                            <i class="bi bi-award footer-icon"></i> Somos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Reservacion", "Home")">
                            <i class="bi bi-clock footer-icon"></i> Haga su reservación
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact", "Home")">
                            <i class="bi bi-telephone footer-icon"></i> Contáctenos
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN -->

    <main>
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer>
        <div class="container">
            <div class="row text-start">
                <div class="col-md-4 mb-3">
                    <p><i class="bi bi-telephone footer-icon"></i> Contáctenos</p>
                        <p>(503) 2240-2900</p>
                        <p>(503) 7855-3389</p>


                </div>
                <div class="col-md-4 mb-3">
                    <p><i class="bi bi-envelope footer-icon"></i> Escríbanos</p>
                    <p>reservaciones@Goldstreet.com.sv</p>
                </div>
                <div class="col-md-4 mb-3">
                    <p><i class="bi bi-clock footer-icon"></i> Horarios de Restaurante</p>
                    <p>Lunes a Viernes de 6:00 a.m. a 12 a.m.</p>
                    <p>Sabado y Domingo de 6:00 a.m. a 3:00 a.m.</p>
                    <div id="Redes">

                        <a href="https://www.facebook.com/goldstreetsv/" target="_blank">
                            <i class="bi bi-facebook footer-icon"></i> Facebook
                        </a>

                        <a href="https://www.instagram.com/goldstreetsv/?hl=es" target="_blank">
                            <i class="bi bi-instagram footer-icon"></i> Instagram
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
